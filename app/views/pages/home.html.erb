
<div  class="home-background">
  <div class="d-flex align-items-center justify-content-center my-4">
    <%= image_tag 'logo.png', class:'logo-homepage' %>
  </div>
  <div>
    <h3 class="title">Search For an Item</h3>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <%= simple_form_for :items, url: items_path, method: :get do |f| %>
          <%= f.input :where?, placeholder: 'location', input_html: { class: "text" }%>
          <%= f.input :what?, placeholder: 'guitar', input_html: { value: "guitar" }  %>
          <div class="d-flex align-items-center justify-content-center">
           <%= f.submit 'Search', class:'button' %>
          </div>
        <% end %>
        <div class="signup container">
          <%= link_to "Sign Up", new_user_registration_path %>
        </div>
      </div>
    </div>
  </div>
</div>


