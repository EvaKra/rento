<div class="topnav">
  <%= link_to "Home", root_path %>
  <%= link_to "List an item", new_item_path(@item) %>
  <%= link_to "Sign up", new_user_registration_path %>
  <%= link_to "Login", new_user_session_path %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
</div>




<link href="https://fonts.googleapis.com/css?family=Offside&display=swap" rel="stylesheet">
<div  class="home-background" style="background-image: url(https://images.unsplash.com/photo-1470753937643-efeb931202a9?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=900&q=800);">
  <div class="d-flex align-items-center justify-content-center my-4">
    <%= image_tag 'logo.png', class:'logo-homepage' %>
  </div>
  <div>
    <h3 class="title">Search For an Item</h3>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <%= simple_form_for :items, url: items_path, method: :get do |f| %>
          <%= f.input :where, placeholder: 'location' %>
          <%= f.input :what, placeholder: 'guitar' %>
          <div class="d-flex align-items-center justify-content-center">
            <%= f.submit 'Search', class:'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



