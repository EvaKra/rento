<link href="https://fonts.googleapis.com/css?family=Offside&display=swap" rel="stylesheet">
<div  class="home-background" style="background-image: url(https://images.unsplash.com/photo-1512977851705-67ee4bf294f4?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=783&q=80);">
  <div class="d-flex align-items-center justify-content-center my-4">
    <%= image_tag 'logo.png', class:'logo-homepage' %>
  </div>
  <div>
    <h3 class="title">Search For an Item</h3>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-6 offset-3">
        <%= simple_form_for :items, url: items_path, method: :get do |f| %>
          <%= f.input :where, placeholder: 'location' %>
          <%= f.input :what, placeholder: 'guitar' %>
          <div class="d-flex align-items-center justify-content-center">
            <%= f.submit 'Search', class:'button' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
