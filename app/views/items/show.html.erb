  <div class="item-container">
   <div class="row-one"> 
    <div class="title-box">
      <%= image_tag 'logo.png', class:'logo-show' %>
      <hr>
      <h2><%= @item.title %></h2>
    </div>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <% @item.photos.size.times do |index| %>
          <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= 'active' if index.zero? %>"></li>
        <% end %>
      </ol>
      <div class="carousel-inner">
        <% @item.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= 'active' if index.zero? %>">
            <%= cl_image_tag(photo.key, class: "d-block w-100" ) %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

<div class="row-two">
<div class="description-box"><p><%= @item.description %></p></div>
  <% if @item.user == current_user %>
    <%= link_to "Delete item", items_path, class: 'btn-delete'%>
  <% else %>
    <%= link_to "Rent it!", new_item_booking_path(@item), class: 'button2'  %>
  <% end %>
</div>

</div>
